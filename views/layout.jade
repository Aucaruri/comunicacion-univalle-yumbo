		//scripts de la aplicación
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/app_angular.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/toggle.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/directives/backImg.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/directives/showImage.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/directives/slider.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/directives/updateImage.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/directives/cargo.js")
