		script(src="https://comunicacionuvyumbo.herokuapp.com/public/js/desktop-notify.js")
		script(src="https://comunicacionuvyumbo.herokuapp.com/public/js/angular-web-notification.js")
		
		//Links para las directivas de angular
		link(rel="stylesheet" href="https://comunicacionuvyumbo.herokuapp.com/ng-dialog/css/ngDialog.min.css")
